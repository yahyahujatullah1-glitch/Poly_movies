{
  "name": "vega-providers",
  "version": "2.0.0",
  "description": "providers for vega-app",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "auto": "node auto-dev.js",
    "build": "node build-simple.js",
    "build:dev": "cross-env SKIP_MINIFY=true node build-simple.js",
    "dev": "node dev-server.js",
    "dev:auto": "concurrently \"nodemon --watch providers --ext ts --exec \\\"npm run build:dev\\\"\" \"npm run dev\"",
    "dev:build": "npm run build && npm run dev",
    "electron:build": "npm run build && electron-builder",
    "electron:build:installer": "npm run build && electron-builder --win nsis",
    "electron:build:portable": "npm run build && electron-builder --win portable",
    "electron:dev": "npm run build && electron .",
    "start": "npm run build && npm run dev",
    "test": "node test-providers.js",
    "test:interactive": "npm run build && node interactive-test.js",
    "test:provider": "node test-provider.js",
    "test:provider:build": "npm run build && node test-provider.js",
    "test:quick": "npm run build && node quick-test.js",
    "test:ui": "npm run test:interactive",
    "vercel-build": "npm run build",
    "watch": "nodemon",
    "watch:dev": "nodemon --watch providers --ext ts --exec \"npm run build\" & npm run dev"
  },
  "dependencies": {
    "axios": "latest",
    "cheerio": "latest",
    "child_process": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "latest",
    "express": "latest",
    "fs": "latest",
    "http": "latest",
    "lucide-react": "^0.454.0",
    "next": "16.0.3",
    "os": "latest",
    "path": "latest",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-native-aes-crypto": "latest",
    "readline": "latest",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^22",
    "@types/react": "19.2.5",
    "@types/react-dom": "19.2.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5",
    "tailwindcss": "4.1.17",
    "terser": "^5.43.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.vega.providers",
    "productName": "PolyMovies",
    "directories": {
      "output": "release",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist/**",
      "public/**",
      "manifest.json",
      "providers/**",
      "dev-server.js",
      "electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js",
      "name": "polymovies",
      "productName": "PolyMovies"
    },
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "icon": "icons/cropped_circle_image (1).ico",
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}